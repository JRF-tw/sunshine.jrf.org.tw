= f.input :career_type
= f.input :old_unit
= f.input :old_title
= f.input :old_assign_court
= f.input :old_assign_judicial
= f.input :old_pt
= f.input :new_unit
= f.input :new_title
= f.input :new_assign_court
= f.input :new_assign_judicial
= f.input :new_pt
= f.input :start_at_in_tw, as: "string", hint: "半型純數字，民國，格式：YY/MM/DD，如不清楚確切日期就填該年第一天或該月第一天"
= f.input :end_at_in_tw, as: "string", hint: "半型純數字，民國，格式：YY/MM/DD，如不清楚確切日期就填該年最後一天及該月最後一天"
= f.input :publish_at_in_tw, as: "string", hint: "半型純數字，民國，格式：YY/MM/DD"
= f.input :source
= f.input :source_link
= f.input :origin_desc, as: :text, input_html: { rows: 8 }
= f.input :memo, as: :text, input_html: { rows: 5 }
= f.input :is_hidden, as: :boolean, hint: "打勾 = 前端頁面不顯示"
.form-actions
  = f.submit "送出", class: "btn btn-primary"
  = " "
  = link_to send("admin_#{@owner_singularize}_careers_path", @owner), class: "btn" do
    = "回到#{@owner.name}的職務經歷列表"
