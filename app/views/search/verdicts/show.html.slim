article
  = render partial: 'components/hero', locals: {\
    heading: '判決查詢',
    description: '判決詳細資料'\
  }

section.container.offcanvas-card-wrapper
  .card.card--article
    - if @verdict
      = admin_widget_box '判決資料', icon: :th do
        table.table.table-bordered.table-striped.table-hover
          tbody
            tr
              td 案由
              td = @verdict.reason
            tr
              td 案件
              td = @story.identity
            tr
              td 法院
              td = @court.full_name
            tr
              td 法院代號
              td = @court.code
            tr
              td 案由
              td = @verdict.reason
            tr
              td 判決日期
              td = @verdict.published_on
            tr
              td 發布日期
              td = @verdict.adjudge_date
            tr
              td 相關法官
              td = @verdict.judges_names.join(',')
            tr
              td 相關律師
              td = @verdict.lawyer_names.join(',')  
            tr
              td 相關檢察官
              td = @verdict.prosecutor_names.join(',')
            tr
              td 相關當事人
              td = @verdict.party_names.join(',')
            tr
              td 司法院公開網址
              td = link_to '請點我', @verdict.abs_url, target: '_blank' if @verdict.abs_url
        h2 判決書內文
        div = smart_add_https(@verdict.content_file.url) if @verdict.content_file.present?
    - else
      = @errors_message
    = link_to "回到上一頁", request.referer.present? ? request.referer : search_stories_path
