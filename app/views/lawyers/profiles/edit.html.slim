= render layout: 'components/card', locals: { heading: '個人基本資料', type: 'lawyer' }
  = simple_form_for(@lawyer, as: :lawyer, url:  lawyer_profile_path, method: :put, wrapper: :md) do |f|
    = f.input :name
    = f.input :phone_number, input_html: { type: "tel" }
    = f.input :office_number, input_html: { type: "tel" }
    = f.input_field :be_noticed, as: :boolean, inline_label: '我願意接受判決評鑑通知'
    = render 'components/form_actions',
      f: f, submit: '確定更新',
      link: { text: '取消', href: lawyer_profile_path }
